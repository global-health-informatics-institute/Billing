<script type="text/javascript">
    var timerHand;

    function checkBarcode() {
        var barcodeTxt = document.getElementById("barcode");
        var barcodeValue = barcodeTxt.value.trim().replace(/\-/,"");

        // Redirect if the barcode value is valid (e.g., not empty)
        if (barcodeValue) {
            window.location = "/patients/patient_by_id/" + barcodeValue;
        }
    }

    function initializeListener() {
        var barcodeInput = document.getElementById("barcode");
        barcodeInput.focus();

        // Listen for user input
        barcodeInput.addEventListener('keyup', function() {
            clearTimeout(timerHand); // Clear previous timeout if user is still typing
            timerHand = setTimeout(function () {
                checkBarcode();
            }, 5000); // Redirect after 5 seconds of no typing
        });
    }

    // Initialize the listener after 2 seconds
    setTimeout(initializeListener, 2000);
</script>
