<div class="section-header">
  <div style="display: table-cell;text-align: left; width: inherit;">
    <b>Service :</b> <%= @service.name %>
  </div>
  <div style="display: table-cell;text-align: center; width: 30vw;border: 1px solid cornflowerblue;">
    <span style="font-size: 0.8em;">General Price</span>
    <div style="display: table-cell;vertical-align: middle;width: 60%;font-size: 0.5em;padding-left: 5px;">
      <%= "#{local_currency(@service.get_price("General").price) rescue ''}" %>
    </div>
    <div style="display: table-cell;vertical-align: middle;text-align: right;width: 40%;">
      <img  src="/assets/edit.png" onmousedown="window.location='/services/<%= @service.id %>/service_prices/new?type=general'" title="Edit Category">
    </div>
  </div>
  <div style="display: table-cell;text-align: center; width: 30vw;border: 1px solid cornflowerblue;">
    <span style="font-size: 0.8em;">Private Price</span>
    <div style="display: table-cell;vertical-align: middle;width: 60%;font-size: 0.5em;padding-left: 5px;">
      <%= "#{local_currency(@service.get_price("Private").price) rescue ''}" %>
    </div>
    <div style="display: table-cell;vertical-align: middle;text-align: right;width: 40%;">
      <img  src="/assets/edit.png" onmousedown="window.location='/services/<%= @service.id %>/service_prices/new?type=private'" title="Edit Category">
    </div>
  </div>
</div>
<div style="height: 70vh;">
  <table class="dashboard-main" id="serviceTypes" >
    <thead>
      <tr>
        <th style="text-align: left;padding-left: 5px;">Price Type</th>
        <th>Price</th>
        <th>Active From</th>
        <th>Active To</th>
        <th>Updated By</th>
      </tr>
    </thead>
    <tbody>
    <% (@service.service_price_histories || []).each do |history| %>
        <tr>
          <td style="text-align: left;padding-left: 5px;"><%= history.price_type%></td>
          <td><%= local_currency(history.price) %></td>
          <td><%= history.active_from.strftime('%d %b, %Y') %></td>
          <td><%= history.active_to.strftime('%d %b, %Y') rescue '' %></td>
          <td><%= history.user.name %></td>
        </tr>
    <% end %>
    </tbody>
  </table>
</div>
<div class="footer">
  <button class="button green" style="float: right;" onmousedown="window.location='/services'">Finish</button>
</div>